{
  "version": "4.0.0-alpha.2",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "packages/app/",
        "package-lock.json"
      ]
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
